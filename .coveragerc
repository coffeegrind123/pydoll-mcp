[run]
# Coverage configuration for PyDoll MCP Server
source = .
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */build/*
    */dist/*
    setup.py
    conftest.py

[report]
# Reporting configuration
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Show missing lines
show_missing = True

# Precision for coverage percentage
precision = 2

# Skip covered files in report
skip_covered = False

# Sort coverage report
sort = Cover

[html]
directory = htmlcov
title = PyDoll MCP Server Coverage Report

[xml]
output = coverage.xml